{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch w/ prod db",
      "type": "coreclr",
      "request": "launch",
      "postDebugTask": "terminate-dotnet-watch",
      "program": "dotnet",
      "args": ["watch", "run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar"
      },
      "env": {
        "DB_ENV": "prod"
      }
    },
    {
      "name": "Launch w/ dev db",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "postDebugTask": "terminate-dotnet-watch",
      "program": "dotnet",
      "args": ["watch", "run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar"
      },
      "env": {
        "DB_ENV": "dev"
      }
    }
  ]
}
